<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true, cache: true %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
</head>
<body>
  <%= render 'layouts/base_header' %>
  <div class="container">
    <div class="row">
      <%= render 'layouts/sidebar_menu' %>
      <div class="col-<%= default_grid_system %>-10">
        <div class="row">
          <div class="col-<%= default_grid_system %>-12">
            <%= render 'layouts/flash' %>
          </div><!-- /.col -->
          <div class="col-<%= default_grid_system %>-12">
            <div class="card">
              <div class="card-block">
                <h5 class="card-title"><%= t ".#{controller_name}.#{action_name}_title" %></h5>
              </div><!-- /.card-block -->
              <div class="card-block">
                <%= yield %>
              </div><!-- /.card-block -->
            </div><!-- /.card -->
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.col -->
    </div><!-- /.row -->
  </div><!-- /.container -->
  <footer id="footer" class="footer footer-dark">
    <div class="container">
      <%= render 'layouts/debug' %>
    </div>
  </footer>
</body>
</html>