<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true, cache: true %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
</head>
<body>
  <%= render 'layouts/base_header' %>
  <div class="container">
    <div class="row">
      <%= render 'layouts/sidebar' %>
      <div class="col-<%= default_grid_system %>-10">
        <div class="row">
          <div class="col-<%= default_grid_system %>-12">
            <%= render 'layouts/flash' %>
          </div><!-- /.col -->
          <div class="col-<%= default_grid_system %>-12">
            <div class="content-header">
              <h4 class="text-muted"><%= t ".#{controller_name}.main_title" %></h4>
            </div>
          </div><!-- /.col -->
          <div class="col-<%= default_grid_system %>-12">
            <div class="card">
              <div class="card-header">
                <%= t ".#{controller_name}.#{action_name}_title" %>
              </div>
              <div class="card-block">
                <%= yield %>
              </div><!-- /.card-block -->
            </div><!-- /.card -->
          </div><!-- /.col -->
        </div><!-- /.row -->
        <%= render 'layouts/debug' %>
      </div><!-- /.col -->
    </div>
  </div>
  <footer id="footer" class="footer footer-dark">
    <div class="container">
      <%= render 'layouts/debug' %>
    </div>
  </footer>
</body>
</html>