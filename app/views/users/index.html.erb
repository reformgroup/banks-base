<div class="col-<%= default_grid_system %>-9">  
  <div class="content-header text-muted">
    <div class="row">
      <div class="col-xs-6">
        <span class="lead"><%= t ".title" %></span>
      </div>
      <div class="col-xs-6">
        <div class="pull-right">
          <i class="fa fa-search"></i>&nbsp;Search&nbsp;&nbsp;|&nbsp;&nbsp;<i class="fa fa-filter"></i><span class="caret"></span>&nbsp;&nbsp;|&nbsp;&nbsp;Add user
        </div>
      </div>
    </div>
  </div>
  <div class="panel panel-default">
    <div class="panel-body">
      <table class="table table-hover">
        <% @users.each do |user| %>
          <tr>
            <td class="avatar avatar-medium">
              <%= image_tag user.avatar.url(:medium), class: "img-circle avatar avatar-medium" %>
            </td>
            <td>
              <div class="col-<%= default_grid_system %>-8">
                <%= link_to user.full_name, user_path(user) %><br>
                <%= user.email %>
              </div>
              <div class="col-<%= default_grid_system %>-4">
                <div class="pull-right"><%= user_label user %></div><br>
                <small class="text-muted pull-right">Created at: <%= l user.created_at, format: :short %></small>
              </div>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>