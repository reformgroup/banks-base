<div class="row">
  <div class="col-lg-6 col-md-12">
    <div class="row">
      <div class="col-lg-4 text-center">
        <%= render "shared/users/user_avatar", f: f %>
      </div>
      <div class="col-lg-8">
        <%= render "shared/users/user_main_fields", f: f %>
        <% if action_name != "edit" %>
        <p class="text-danger"><%= t ".password_note" %></p>
        <% end %>
      </div><!-- /.col -->
    </div>
    <div class="row">
      <hr>
      <div class="col-lg-12">
        <div class="pull-right">
          <% if action_name == "edit" %>
          <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modal">
            <%= icon "trash-o", t(".confirm.delete.button") %>
          </button>
          <%= render partial: "shared/modals/modal", locals: {  title: t(".confirm.delete.title"),
          body: t(".confirm.delete.body"),
          ok_link: link_to(t("buttons.delete"), user_path(@user), method: :delete, class: "btn btn-danger"),
          cancel_link_text: t("buttons.cancel") } %>
          <% end %>
          <button class="btn btn-default" type="submit"><%= icon "floppy-o", t("buttons.save") %></button>
        </div>
      </div><!-- /.col -->
    </div><!-- /.row -->
  </div><!-- /.col -->
</div><!-- /.row -->
