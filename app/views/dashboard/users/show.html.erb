<% provide :title, @user.short_name %>

<div class="row">
  <div class="col-<%= default_grid_system %>-4 text-center">
    <%= image_tag @user.avatar.url, class: "img-circle avatar avatar-original center-block" %>
  </div>
  <div class="col-<%= default_grid_system %>-8">
    <div class="row">
      <div class="col-<%= default_grid_system %>-12">
        <h1 class="only-bottom-margin"><%= @user.full_name %></h1>
      </div>
    </div>
    <div class="row">
      <div class="col-<%= default_grid_system %>-6">
        <span class="text-muted"><%= User.human_attribute_name "email" %>:</span><br><%= @user.email %><br><br>
        <span class="text-muted"><%= User.human_attribute_name "birth_date" %>:</span><br><%= l @user.birth_date %> (<%= @user.age %>)<br><br>
        <span class="text-muted"><%= User.human_attribute_name "gender" %>:</span><br><%= User.human_attribute_name "gender.#{@user.gender}" %><br><br>
        <small class="text-muted"><%= t "timestamp.created_at" %>: <%= time_ago_tag(@user.created_at) %></small>
      </div>
      <div class="col-<%= default_grid_system %>-6">
        <div class="activity-mini">
          <%= icon "comment-o", nil, class: "text-muted" %>
        </div>
        <div class="activity-mini">
          <%= icon "thumbs-o-up", nil, class: "text-muted" %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <hr>
  <div class="col-<%= default_grid_system %>-12">
    <%= link_to icon("pencil", t("buttons.edit")), edit_dashboard_user_path, { class: "btn btn-default pull-right", role: "button" } %>
  </div>
</div>