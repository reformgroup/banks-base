<div class="col-<%= default_grid_system %>-9">
  <div class="panel panel-default">
    <div class="panel-heading">
      <span class="lead">
        <%= t ".title" %>
      </span>
    </div>
    <div class="panel-nav">
      <%= link_to icon("plus", t(".add_user_link")), new_admin_user_path %>
      <%= form_tag(admin_users_path, method: :get, id: "search-form") do %>
      <div class="input-group">
        <%= text_field_tag :search, params[:search], placeholder: "Search Users", class: "form-control" %>
        <div class="input-group-btn">
          <button type="submit" class="btn btn-default"><i class="fa fa-search"></i> <%= t ".search" %></button>
          <div class="btn-group" role="group">
            <button type="button" class="btn btn-default" data-toggle="collapse" data-target="#search-options" aria-expanded="false" aria-controls="search-options">
              <i class="fa fa-filter"></i>
              <span class="caret"></span>
            </button>
          </div>
        </div>
      </div>
      <div class="collapse" id="search-options">
        <div class="form-group">
          <label for="exampleInputEmail1">Last name</label>
          <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email">
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">First name</label>
          <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email">
        </div>
      </div>
      <% end %>
    </div>
    <div class="panel-body">
      <table class="table table-hover">
        <% @users.each do |user| %>
          <tr>
            <td class="avatar avatar-medium">
              <%= image_tag user.avatar.url(:medium), class: "img-circle avatar avatar-medium" %>
            </td>
            <td>
              <div class="col-<%= default_grid_system %>-8">
                <%= link_to user.full_name, admin_user_path(user) %><br>
                <%= user.email %>
              </div>
              <div class="col-<%= default_grid_system %>-4">
                <div class="pull-right"><%= user_label user %></div><br>
                <small class="text-muted pull-right">Created at: <%= l user.created_at, format: :short %></small>
              </div>
            </td>
          </tr>
        <% end %>
      </table>
      <div class="pagination-block">
        <%= will_paginate @users, inner_window: 2, outer_window: 1 %>
        <div class="pagination-info text-muted">
          <small><%= page_entries_info @users, model: User, html: false %></small>
        </div>
      </div>
    </div>
  </div>
</div>