<div class="col-<%= default_grid_system %>-9">
  <div class="panel panel-default">
    <div class="panel-heading">
      <span class="lead">
        <%= t ".title" %>
      </span>
    </div>
    <div class="panel-nav">
      <%= link_to t(".add_user_link"), new_admin_user_path %>
      <div class="dropdown">
        <button class="btn btn-link dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
          <%= t ".filters_link" %>
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
          <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Action</a></li>
          <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Another action</a></li>
          <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Something else here</a></li>
          <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Separated link</a></li>
        </ul>
      </div>
    </div>
    <div class="panel-body">
      <table class="table table-hover">
        <% @users.each do |user| %>
          <tr>
            <td class="avatar avatar-medium">
              <%= image_tag user.avatar.url(:medium), class: "img-circle avatar avatar-medium" %>
            </td>
            <td>
              <div class="col-<%= default_grid_system %>-8">
                <%= link_to user.full_name, user_path(user) %><br>
                <%= user.email %>
              </div>
              <div class="col-<%= default_grid_system %>-4">
                <div class="pull-right"><%= user_label user %></div><br>
                <small class="text-muted pull-right">Created at: <%= l user.created_at, format: :short %></small>
              </div>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>