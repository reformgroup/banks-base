<% provide :title, t(".title") %>

<div class="col-<%= default_grid_system %>-9">
  <div class="panel panel-default">
    <div class="panel-heading">
      <span class="lead">
        <%= t ".title" %>
      </span>
    </div>
    <div class="panel-nav">
      <%= link_to icon("plus", t(".add_user_link")), new_admin_user_path %>
      <%= form_tag(admin_users_path, method: :get, id: "search-form") do %>
        <div class="input-group">
          <%= text_field_tag :search, params[:search], class: "form-control" %>
          <div class="input-group-btn">
            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i> <%= t ".search_button" %></button>
            <div class="btn-group" role="group">
              <button type="button" class="btn btn-default" data-toggle="collapse" data-target="#search-options" aria-expanded="false" aria-controls="search-options">
                <i class="fa fa-filter"></i>
                <span class="caret"></span>
              </button>
            </div>
          </div>
        </div>
        <div class="collapse" id="search-options">
          Search params...
          <%= select_tag "filter", options_for_select([["Last name (a-z)", "last_name_asc"], ["Last name (z-a)", "last_name_desc"]]), class: 'form-control' %>
        </div>
      <% end %>
    </div>
    <div class="panel-body">
      <table class="table table-hover">
        <% @users.each do |user| %>
          <%= render "shared/user_item", user: user %>
        <% end %>
      </table>
      <div class="pagination-block">
        <%= will_paginate @users, inner_window: 2, outer_window: 1 %>
        <div class="pagination-info text-muted">
          <small><%= page_entries_info @users, model: User, html: false %></small>
        </div>
      </div>
    </div>
  </div>
</div>